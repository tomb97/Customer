<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tombarrett.estimotemirror.views.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybutton"
            android:onClick="button2Clicked"
            android:text="  User Details  " />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:background="@drawable/mybutton"
            android:text="        Tokens        " />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/mybutton"
            android:text="Purchase Product and Redeem Points"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button"
            android:layout_below="@+id/button"
            android:layout_marginTop="50dp"
            android:text="NAME"
            android:textColor="#800080"
            android:textSize="20dp"
            android:visibility="invisible" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/titleLabel"
            android:layout_marginTop="37dp"
            android:src="@drawable/shoe"
            android:visibility="invisible"
            app:border_width="3dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButton5"
            android:layout_alignTop="@+id/profile_image"
            android:text="DESCRIPTION"
            android:textColor="#800080"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/colorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profile_image"
            android:layout_alignStart="@+id/textView12"
            android:text="COLOURS AVAILABLE"
            android:textColor="#800080"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/sizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/colorLabel"
            android:layout_below="@+id/colorLabel"
            android:layout_marginTop="72dp"
            android:text="SIZES AVAILABLE"
            android:textColor="#800080"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="18dp"
            android:text="description"
            android:textColor="#800080"
            android:textSize="15dp"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colorLabel"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/radioButton5"
            android:text="Yellow"
            android:textColor="#800080"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton"
            android:layout_alignBottom="@+id/radioButton"
            android:layout_centerHorizontal="true"
            android:text="Blue"
            android:textColor="#800080"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButton5"
            android:layout_below="@+id/sizeLabel"
            android:layout_marginTop="18dp"
            android:text="6 "
            android:textColor="#800080"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton6"
            android:layout_alignBottom="@+id/radioButton6"
            android:layout_alignEnd="@+id/textView12"
            android:text="7"
            android:textColor="#800080"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton6"
            android:layout_alignEnd="@+id/colorLabel"
            android:text="8"
            android:textColor="#800080"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton"
            android:layout_toEndOf="@+id/radioButton"
            android:text="Red"
            android:textColor="#800080"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButton5"
            android:layout_alignStart="@+id/profile_image"
            android:text="PRICE"
            android:textColor="#800080"
            android:textSize="30dp"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
